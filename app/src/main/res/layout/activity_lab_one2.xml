<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".soundvibrator.LabOne">

	<Button android:id="@+id/vibrator_btn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Vibrate"/>

	<Button android:id="@+id/beep_btn"
			android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="System Beep"
	        app:layout_constraintTop_toBottomOf="@+id/vibrator_btn" />

	<Button android:id="@+id/customSound_btn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        app:layout_constraintTop_toBottomOf="@+id/beep_btn"
	        android:text="Customized Sound"/>

</android.support.constraint.ConstraintLayout>